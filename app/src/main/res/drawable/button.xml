<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <stroke android:width="1dip" android:color="@color/PossumBeige" />
            <gradient android:angle="-90" android:startColor="@color/PossumBeige" android:endColor="@color/PossumBeige"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <solid android:color="@color/PossumWhite"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <gradient android:angle="-90" android:startColor="@color/PossumWhite" android:endColor="@color/PossumWhite" />
        </shape>
    </item>
</selector>
