<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/PossumBeige</item>
        <item name="colorPrimaryVariant">@color/PossumBeige</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/PossumBeige</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ThemeOverlay.MySwitchCompat" parent="">
        <item name="android:colorForeground">@color/PossumBeige</item>
        <item name="trackTint">@color/PossumBeige</item>
        <item name="colorSwitchThumbNormal">@color/PossumWhite</item>
        <item name="colorControlActivated">@color/PossumBlue</item>
    </style>

</resources>